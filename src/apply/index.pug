div
  include @/@loadingio/bootstrap.ext/index.pug
  include @/ldview/index.pug
  mixin widget(name)
    div(ld="block",data-name=name)
  style(type="text/css"): include:stylus index.styl
  script(type="@plotdb/block")
    include:lsc fields.ls
    include:lsc i18n.ls
    include:lsc index.ls
  div(plug="form")
    img.border-bottom.print-hide.embed-hide(path,path-src="img/index.jpg",
    width="1600",height="1067",style="width:100%;height:auto",alt="summit form jumbotron")
    .sect.embed-hide
      img.mb-4(path,path-src="img/g0v-logo.svg",width="128",height="1288",style="height:auto",alt="g0v logo")
      .pb-4
      h1 #[span.text-sm(t="title.year")]#[br]#[span(t="title.name")]
      p.text-muted(t="title.date")
      hr
      p
        span(t="必填項目提示.0")
        span.mx-2 #[span.text-danger.font-weight-bold *]
        span(t="必填項目提示.1")
    .sect.view-hide
      .p-4.mb-5.border
        .d-none(ld="for-lng", data-lng="zh"): include ./doc/claiming.zh.pug
        .d-none(ld="for-lng", data-lng="en"): include ./doc/claiming.en.pug
      +widget("agreement_accept")
      +widget("agreement_no_short")
    .sect
      .p-4.mb-5.border(style="white-space: pre-line;", t="本區段會包含投稿與講者資訊的相關問題")
      +widget("title_zh")
      +widget("title_en")
      +widget("description_zh")
      +widget("description_en")
      +widget("theme")
      .border-left.ml-5.px-4.py-3
        .mb-4(t="請選擇與你投稿內容相關連之 g0v Summit 2024 之關鍵字")
        div(ld="visibility",data-name="keywords_1"): +widget("keywords_1")
        div(ld="visibility",data-name="keywords_2"): +widget("keywords_2")
        div(ld="visibility",data-name="keywords_3"): +widget("keywords_3")
        div(ld="visibility",data-name="keywords_4"): +widget("keywords_4")
        div(ld="visibility",data-name="keywords_5"): +widget("keywords_5")
    .sect
      +widget("email")
      +widget("affiliation")
      +widget("name")
      +widget("social_link")
      +widget("time_attend")
      +widget("language")
      +widget("visa_assistance")
      +widget("diverse_traits")
      +widget("event_format")
      .border-left.ml-5.px-4.py-3
        .sect-speech
          div(ld="visibility",data-name="participate_format"): +widget("participate_format")
          div(ld="visibility",data-name="participate_format_novideo"): +widget("participate_format_novideo")
          div(ld="visibility",data-name="speach_speaker"): +widget("speach_speaker")
        .sect-panel(ld="visibility",data-name="sect-panel")
          +widget("panel_speaker_1")
          +widget("panel_speaker_1_affilation")
          +widget("panel_speaker_2")
          +widget("panel_speaker_2_affilation")
          +widget("panel_speaker_3")
          +widget("panel_speaker_3_affilation")
          +widget("panel_note")
        .sect-workshop(ld="visibility",data-name="sect-workshop")
          +widget("workshop_length")
          +widget("workshop_intro")
          +widget("workshop_suitable")
          +widget("workshop_equipment")
    .sect.view-hide
      +widget("where_get")
      +widget("something_to_say")

    .sect.embed-hide.view-hide
      .btn.btn-primary.btn-lg.px-4(t,ld="submit") 送件
      .my-2: .text-danger.text-sm * #[span(t) 送件後無法再修改]
    +nbr(4)
